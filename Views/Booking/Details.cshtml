@model CLDV6211_POE_Part_1_ST10438307_Daniel_Gorin.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<h1>Booking Details</h1>
<hr />

<h4>Event</h4>
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Event?.Name</dd>

    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.Event?.Date.ToShortDateString()</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Event?.Description</dd>
</dl>

<h4>Venue</h4>
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Venue?.Name</dd>

    <dt class="col-sm-2">Address</dt>
    <dd class="col-sm-10">@Model.Venue?.Adress</dd>

    <dt class="col-sm-2">Capacity</dt>
    <dd class="col-sm-10">@Model.Venue?.Capacity</dd>

    <dt class="col-sm-2">Wheelchair Access</dt>
    <dd class="col-sm-10">@Model.Venue?.WheelchairAccess</dd>

    <dt class="col-sm-2">Pet Friendly</dt>
    <dd class="col-sm-10">@Model.Venue?.PetFriendly</dd>
</dl>

<h4>Booking Info</h4>
<dl class="row">
    <dt class="col-sm-2">Booking Date</dt>
    <dd class="col-sm-10">@Model.BookingDate.ToShortDateString()</dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
